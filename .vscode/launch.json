    // ${userHome}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/libs

    "version": "0.2.0",
    "configurations": [
        {
            "name": "lldb launch",
            "type": "lldb",
            "request":"launch",
            "program":"${workspaceFolder}/target/debug/my_crate",
            "args":[],
            "cwd": "${workspaceFolder}",
            "terminal":"integrated",
            "env": {
                "LD_LIBRARY_PATH": "${userHome}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib/rustlib/x86_64-unknown-linux-gnu/lib/:${workspaceFolder}/target/debug/deps/",
            },
            "preLaunchTask": "rust: cargo build"
        },
        
        {
            "name": "cargo run",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "cargo",
            "runtimeArgs": ["run"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'my_crate'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=my_crate",
                    "--package=my_crate"
                ],
                "filter": {
                    "name": "my_crate",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "${userHome}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib/rustlib/x86_64-unknown-linux-gnu/lib/:${workspaceFolder}/target/debug/deps/",
            },
        }
    ]
}